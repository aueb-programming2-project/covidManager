<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?scenebuilder-stylesheet '../style/vista.css'?>

<StackPane fx:id="secretarySchedule" alignment="BOTTOM_RIGHT" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.covid_fighters.gui.SecretaryScheduleCntrl">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox prefHeight="171.0" prefWidth="800.0">
               <children>
                  <VBox prefHeight="100.0" prefWidth="300.0">
                     <children>
                        <ComboBox fx:id="courses" onAction="#comboBoxWasUpdated" prefWidth="150.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <CheckBox fx:id="monday" mnemonicParsing="false" text="Monday" />
                        <CheckBox fx:id="tuesday" mnemonicParsing="false" text="Tuesday" />
                        <CheckBox fx:id="wednesday" mnemonicParsing="false" text="Wednesday" />
                        <CheckBox fx:id="thursday" mnemonicParsing="false" text="Thursday" />
                        <CheckBox fx:id="friday" mnemonicParsing="false" text="Friday" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="Press Save for each subject individually" />
            <Button fx:id="save" mnemonicParsing="false" text="Save" />
         </children></VBox>
   </children>
</StackPane>
