<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.covid_fighters.gui.LoginCntrl">
   <children>
      <VBox alignment="CENTER" prefHeight="146.0" prefWidth="355.0">
         <children>
            <Label text="Covid Manager">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="174.0" prefWidth="760.0">
         <children>
            <VBox alignment="CENTER" prefHeight="99.0" prefWidth="130.0">
               <children>
                  <TextField fx:id="userName" onAction="#onEnter" prefHeight="25.0" prefWidth="172.0" promptText="User Name" />
                  <PasswordField fx:id="password" onAction="#onEnter" prefHeight="25.0" prefWidth="100.0" promptText="Password" />
                  <Button onAction="#loginButtonPushed" text="Login" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox prefHeight="108.0" prefWidth="760.0">
         <children>
            <Label text="Powered by:">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@mongodb.png" />
                     </image></ImageView>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@java.jpg" />
                     </image></ImageView>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@javafx.png" />
                     </image></ImageView>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@javarmi.png" />
                     </image></ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
